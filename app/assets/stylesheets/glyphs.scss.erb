@font-face {
	font-family: 'webglyphs';
	src: url('<%= asset_url "glyphs.eot" %>');
	src: url('<%= asset_url "glyphs.eot" %>?#iefix') format('embedded-opentype'),
	     url('<%= asset_url "glyphs.woff" %>') format('woff'),
	     url('<%= asset_url "glyphs.ttf" %>') format('truetype'),
	     url('<%= asset_url "glyphs.svg" %>#webglyphs') format('svg');
	font-weight: normal;
	font-style: normal;
}

.glyph:before {
	font-family: 'webglyphs' !important; 
	font-size: 48px;
	position: relative;
	display: inline-block;
	dominant-baseline: text-before-edge;
	pointer-events: none;
}

.glyph-arrow-left:before {
	content: "\F001";
}

.glyph-more-vert:before {
	content: "\F002";
}

.glyph-more-vert {
	text-align: center;
}


@media (min-width:1281px) { 

	.glyph:before {
		font-size: 32px;
	}

}
