.performers-filter {
	width: <%= $locals[:performers_filter_width] %>;
}

<% if $locals[:performers_filter_width][/px/] %>
	.glyph-settings.nominated {
		right: <%= $locals[:performers_filter_width].to_i - 40 %>px;
	}
	.performers-filter.retracted {
		right: -<%= $locals[:performers_filter_width].to_i - 10 %>px !important;
	}
<%# elsif $locals[:performers_filter_width][/\%/]%>
<% else %>
	.glyph-settings.nominated {
		left: 0;
	}
	.performers-filter.retracted {
		right: -<%= $locals[:performers_filter_width].to_i - 2 %>% !important;
	}
<% end %>

