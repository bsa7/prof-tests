.header.bg1.p30.c1.sh2
	%h3.ib
		%a.c3{href: "/"}
			- if !params['test_type'] 
				В начало
			- else
				Тесты
	- if params['test_type'] 
		%h3.ib 
			= I18n.t params['test_type'].gsub(/-/,'_')
	.pull-right
		- if @session && @session[:client_id]
			%a{href: "client_#{@session.client_id}"}
	- if params['test_type'] && @question[:count] && @question[:count] > 0 && @question[:list] && @question[:list].size > 0
		.pull-right
			.c1#counter
				= "(#{@question[:count] - @question[:list].size} / #{@question[:count]})"